                      android:orientation="horizontal"
                      app:layout_gravity="left|center_vertical"
                      android:padding="10dp">
            <TextView android:text="Round"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_columnWeight="1"
                      android:layout_margin="5sp"
                      android:layout_gravity="center_vertical"
                      android:textColor="#000000"
                      android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:id="@+id/round_indicator"
                android:text="0"
                android:textSize="20sp"/>

        </LinearLayout>
        <Button android:onClick="endGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />

        <com.saavedra29.aris.test2.MChronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer"
            android:textSize="25sp"
            app:layout_gravity="center_vertical|right"
