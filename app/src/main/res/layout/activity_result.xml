<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/resultLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/finish_background"
              android:clickable="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <TextView
        android:id="@+id/result_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.74"
        android:gravity="bottom|center"
        android:text="Your score"
        android:textColor="#663300"
        android:textSize="35sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:padding="20dp"/>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:columnCount="2"
        app:rowCount="3"
        android:layout_weight="1"
        app:rowOrderPreserved="false"
        app:useDefaultMargins="false"
        >

        <TextView
            android:id="@+id/newScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fd2f2f"
            android:textSize="21sp"
            android:text="Congrutulations! New highscore!"
            android:textStyle="italic"
            app:layout_columnWeight="1"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/scoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Score:"
            android:textStyle="italic"
            app:layout_columnWeight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/scoreOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="00:00:1"
            android:textStyle="italic"
            app:layout_columnWeight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/highscoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Highscore:"
            android:textStyle="italic"
            app:layout_columnWeight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/highscoreOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="00:02:3"
            android:textStyle="italic"
            app:layout_columnWeight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            />
    </android.support.v7.widget.GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.69">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:text="Touch screen to replay"
            android:textStyle="italic"/>
    </RelativeLayout>

</LinearLayout>